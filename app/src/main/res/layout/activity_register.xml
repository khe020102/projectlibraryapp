<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9E5FF"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:fontFamily="@font/bbbbold"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="학번"
                    android:textSize="18sp" />

                <EditText
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/editTextId_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint="@string/editId_hint"
                    android:inputType="text" />

                <Button
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/btnCheckId_Reg"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|top"
                    android:backgroundTint="#FFFFFF"
                    android:text="중복확인"
                    android:textColor="#1C26FF"
                    android:padding="1dp"
                    android:textSize="12sp"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="비밀번호"
                    android:textSize="18sp"  />

                <EditText
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/editTextPass_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint="@string/editPass_hint"
                    android:inputType="textPassword" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="비밀번호 확인"
                    android:textSize="18sp" />

                <EditText
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/editTextRePass_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:inputType="textPassword" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="닉네임"
                    android:textSize="18sp" />

                <EditText
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/editTextNick_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint="@string/editNick_hint"
                    android:inputType="text"
                    android:maxLength="20" />

                <Button
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/btnCheckNick_Reg"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|top"
                    android:backgroundTint="#FFFFFF"
                    android:text="중복확인"
                    android:textColor="#1C26FF"
                    android:padding="1dp"
                    android:textSize="12sp"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="휴대폰"
                    android:textSize="18sp" />

                <EditText
                    android:fontFamily="@font/bbbbold"
                    android:id="@+id/editTextPhone_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint="@string/editPhone_hint"
                    android:inputType="number" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btnRegister_Reg"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginBottom="45dp"
        android:background="#00FF0000"
        android:src="@drawable/complete"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:backgroundTint="#00FF0000"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>